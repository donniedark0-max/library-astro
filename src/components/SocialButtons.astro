---
import GithubIcon from "@/icons/github.astro"
import LinkedinIcon from "@/icons/linkedin.astro"
---

<nav class:list={`${Astro.props.class}`}>
	<ul
		class="flex flex-row items-center gap-x-6"
		aria-label="redes sociales"
	>
		<li>
			<a
				target="_blank"
				rel="noopener"
				aria-label="Linkedin de Juan, se abrira en una nueva ventana"
				href="https://www.linkedin.com/in/juan-jose-vilcahuaman-alvarado-810954207/"
				class="inline-block any-hover:scale-125 any-hover:opacity-70 motion-safe:transition motion-reduce:any-hover:scale-100"
			>
				<LinkedinIcon
					class="text-primary transition-colors duration-300 hover:text-accent motion-reduce:duration-0"
				/>
			</a>
		</li>
		<li>
			<a
				target="_blank"
				rel="noopener"
				aria-label="GitHub de el proyecto, se abrirá en una nueva pestaña"
				href="https://github.com/donniedark0-max/library-astro"
				class="inline-block any-hover:scale-125 any-hover:opacity-70 motion-safe:transition motion-reduce:any-hover:scale-100"
			>
				<GithubIcon
					class="text-primary transition-colors duration-300 hover:text-accent motion-reduce:duration-0"
				/>
			</a>
		</li>
	</ul>
</nav>