---
import { AUTHORS } from "../consts/authors.ts"

const selectedAuthors = AUTHORS.slice(0, 3);
---

<section class="authors-info py-10 rounded-lg pt-32">
    <h2 class="text-5xl font-bold mb-6">Autores memorables</h2>
    <div class="flex w-full space-x-4 pl-7 overflow-x-scroll" style="linear-gradient: ">
        {selectedAuthors.map(author => (
            <div class="author flex-shrink-0 w-full sm:w-1/2 lg:w-[90%] p-6 bg-slate-900 text-secondary rounded-xl" accesskey={author.id}>
                <picture class="block mx-auto mb-4"> 
                    <img src={author.portraitURL} alt={'retrato de ${author.name]'} class="w-full h-auto rounded-xl" style="mask-image:radial-gradient(black 10%, transparent 100%)">
                </picture>
                <h3 class="text-2xl font-semibold mb-2">{author.name}</h3>
                <p class="mb-2"><strong>Fecha de nacimiento:</strong> {author.birthDate?.toLocaleDateString()}</p>
                <p>{author.biography}</p>
            </div>
        ))},
    </div>
</section>